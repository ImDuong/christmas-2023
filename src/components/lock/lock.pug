doctype html
html
  head
    meta(charset="utf-8")
    meta(name="viewport", content="width=device-width")
    title My Heart
    link(href="@@webRoot/components/lock/lock.css", rel="stylesheet", type="text/css")
    script(defer, src='@@webRoot/components/lock/lock.js')

  body
- var nums = 3; // should match length of combo array in the JavaScript

.container(id='container')
  .lock
    .shackle
      .top
        .inner
      .left
        .dentL
        .dentR
      .right
    .arrow
  .dial
    - for (var i = 0;i < 40;++i) {
        .tick
    - }
    
div.combo(id='combo')
  - for (var i = 1; i <= nums; ++i) {
    span(class="num" + i)
    =" "
  - }
    
script(src="https://ajax.googleapis.com/ajax/libs/jquery/3.1.0/jquery.min.js")
